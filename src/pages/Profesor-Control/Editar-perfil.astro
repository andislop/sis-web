---
import ProfesorDashboard from "../../layouts/Profesor/ProfesorDashboard.astro";
import Sidebar from "../../components/components-profesor/SidebarP.astro";
import NavigationBar from "../../components/components-profesor/NavigationBarP.astro";
import Editarperfil from "../../components/components-profesor/Editar-perfil.astro";
---

<ProfesorDashboard title="Editar perfil">
  <NavigationBar />
  <!-- Crear dos comnunas para ambos -->
  <div class="Layout-grid-area">
    <div class="Layout-grid-area--sidebar">
      <Sidebar />
    </div>
    <div class="Layout-grid-area--content">
      <Editarperfil />
    </div>
  </div>

  <style>
    .Layout-grid-area {
      display: grid;
      grid-template-columns: 250px 1fr;
      margin: 0 auto;
    }
    .Layout-grid-area.sidebar-minimized {
      grid-template-columns: 70px 1fr;
    }
    .Layout-grid-area > :first-child,
    .Layout-grid-area > :last-child {
      width: 100%;
    }
  </style>
</ProfesorDashboard>
